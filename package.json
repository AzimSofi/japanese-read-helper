{
  "name": "read-helper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3333",
    "dev-lan": "next dev --hostname 192.168.1.15 --port 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:restart": "docker-compose restart",
    "db:logs": "docker-compose logs -f db",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "db:init": "curl http://localhost:3333/api/init-db",
    "db:migrate": "curl http://localhost:3333/api/migrate-text-files"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "@google/genai": "^1.13.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "bcryptjs": "^3.0.3",
    "jose": "^6.1.2",
    "marked": "^16.1.2",
    "next": "15.4.5",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "prisma": "^7.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-ui-react": "^5.18.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "kuroshiro": "^1.2.0",
    "kuroshiro-analyzer-kuromoji": "^1.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.30.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
